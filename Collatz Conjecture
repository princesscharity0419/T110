import java.util.*;
public class Main
{
	public static void main(String[] args) 
	{
	    Scanner scan = new Scanner(System.in);
		System.out.print("Input Any Positive Integers: ");
		int n = scan.nextInt();
		
		while(n>1)
		{
		    if((n%2) == 0)
		    {
		        n = n/2;
		        System.out.println("Current Given Value is " +n);
		    }
		    else
		    {
		        n = 3 * n + 1;
		        System.out.println("Current Given Value is " +n);
		    }
		}
	}
}
